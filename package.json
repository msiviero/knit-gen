{
  "name": "@msiviero/knit-gen",
  "version": "1.3.5",
  "bin": {
    "knit-gen": "./dist/main.js"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/msiviero/knit-gen"
  },
  "keywords": [
    "nodejs",
    "project generator",
    "typescript"
  ],
  "description": "Knit library project generator",
  "scripts": {
    "build": "npm run-script clean && tsc -p ./tsconfig.build.json",
    "test": "jest --detectOpenHandles",
    "lint": "tslint -c ./tslint.json -p tsconfig.json",
    "clean": "rimraf dist",
    "deploy": "npm run-script lint && npm run-script build && npm publish --access public"
  },
  "jest": {
    "globals": {
      "tsConfigFile": "tsconfig.json"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts)"
    ],
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@types/dot": "^1.1.3",
    "@types/inquirer": "0.0.44",
    "@types/jest": "^24.0.11",
    "@types/jszip": "^3.1.5",
    "@types/mkdirp": "^0.5.2",
    "@types/node": "^11.11.3",
    "jest": "^24.5.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.3",
    "tslint": "^5.14.0",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "@msiviero/knit": "^1.2.3",
    "chalk": "^2.4.2",
    "dot": "^1.1.2",
    "inquirer": "^6.2.2",
    "jszip": "^3.2.0",
    "mkdirp": "^0.5.1"
  }
}
