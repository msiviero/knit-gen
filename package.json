{
  "name": "@msiviero/knit-gen",
  "version": "1.4.0",
  "bin": {
    "knit-gen": "./dist/main.js"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/msiviero/knit-gen"
  },
  "keywords": [
    "nodejs",
    "project generator",
    "typescript"
  ],
  "description": "Knit library project generator",
  "scripts": {
    "build": "npm run-script clean && tsc -p ./tsconfig.build.json",
    "test": "jest --detectOpenHandles",
    "lint": "tslint -c ./tslint.json -p tsconfig.json",
    "clean": "rimraf dist",
    "deploy": "npm run-script lint && npm run-script build && npm publish --access public"
  },
  "jest": {
    "globals": {
      "tsConfigFile": "tsconfig.json"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts)"
    ],
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@types/inquirer": "6.0.3",
    "@types/jest": "^24.0.15",
    "@types/jszip": "^3.1.6",
    "@types/lodash": "^4.14.136",
    "@types/mkdirp": "^0.5.2",
    "@types/node": "^12.6.8",
    "jest": "^24.8.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "@msiviero/knit": "^1.3.0",
    "chalk": "^2.4.2",
    "inquirer": "^6.5.0",
    "jszip": "^3.2.2",
    "lodash": "^4.17.15",
    "mkdirp": "^0.5.1"
  }
}
